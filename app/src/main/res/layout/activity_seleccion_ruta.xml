<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionRuta">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige la ruta que quieres hacer hoy"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intenta elegir una ruta diferente cada día"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"  />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta 1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta 2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta 3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta 4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta 5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="350dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Sugiéreme una ruta!"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:onClick="RouteDeveloping"
        app:srcCompat="@drawable/bike" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:layout_marginTop="530dp"
        android:layout_centerHorizontal="true" />



</RelativeLayout>